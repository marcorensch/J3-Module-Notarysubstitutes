<?xml version="1.0" encoding="utf-8"?>
<form>
    <field name="column"
           type="list"
           default="name_combined"
           label="MOD_NM_COL_LBL" description="MOD_NM_COL_DES"
    >
        <option value="name_combined">MOD_NM_COL_NAME_COM</option>
        <option value="name">MOD_NM_COL_NAME</option>
        <option value="street">MOD_NM_COL_STREET</option>
        <option value="ziptown">MOD_NM_COL_ZIPTOWN</option>
        <option value="phone">MOD_NM_COL_PHONE</option>
        <option value="email">MOD_NM_COL_MAIL</option>
        <option value="website">MOD_NM_COL_WEB</option>
        <option value="birthday_year">MOD_NM_COL_BDAY</option>
        <option value="listing_registered">MOD_NM_COL_FROM</option>
        <option value="listing_cancelled">MOD_NM_COL_TILL</option>
        <option value="" disabled="true">----- Notar -----</option>
        <option value="n_name_combined">MOD_NM_COL_N_NAME_COM</option>
        <option value="n_title">MOD_NM_COL_N_TITLE</option>
        <option value="n_firstname">MOD_NM_COL_N_FIRSTNAME</option>
        <option value="n_lastname">MOD_NM_COL_N_LASTNAME</option>
        <option value="n_street">MOD_NM_COL_N_STREET</option>
        <option value="n_ziptown">MOD_NM_COL_N_ZIPTOWN</option>
    </field>

    <field name="column_title"
           filter="safehtml"
           type="text"
           hint="Name"
           label="MOD_NM_COL_TITLE" description=""
    />
    <field name="button"
           showon="column:email,website"
           type="radio"
           default="1"
           class="btn-group btn-group-yesno"
           filter="integer"
           label="MOD_NM_BTN_LINK" description="MOD_NM_BTN_LINK_DES"
    >
        <option value="0">JNO</option>
        <option value="1">JYEs</option>
    </field>
    <field name="icon_button"
           showon="column:email,website[AND]button:1"
           type="radio"
           default="1"
           class="btn-group btn-group-yesno"
           filter="integer"
           label="MOD_NM_ICOBTN_LINK" description="MOD_NM_ICOBTN_LINK_DES"
    >
        <option value="0">JNO</option>
        <option value="1">JYEs</option>
    </field>
    <field name="buttonsize"
           showon="column:email,website[AND]button:1"
           type="list"
           default="medium"
           label="MOD_NM_BTN_SIZE" description=""
    >
        <option value="small"></option>
        <option value="medium"></option>
        <option value="large"></option>
    </field>
    <field name="buttonstyle"
           showon="column:email,website[AND]button:1"
           type="list"
           default="default"
           label="MOD_NM_BTN_STYLE" description=""
    >
        <option value="default"></option>
        <option value="primary"></option>
        <option value="secondary"></option>
        <option value="text"></option>
        <option value="link"></option>
        <option value="custom"></option>
    </field>
    <field name="col_cls"
           filter="safehtml"
           type="textarea"
           rows="3"
           label="MOD_NM_COLHEADER_CLS" description="MOD_NM_FIELD_CLS_DES"
    />
    <field name="field_classes"
           filter="safehtml"
           type="textarea"
           rows="3"
           label="MOD_NM_FIELD_CLS" description="MOD_NM_FIELD_CLS_DES"
    />
</form>
